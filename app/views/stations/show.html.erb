<%= content_for(:title, "View | Bus Stations") %>
<h1><%= @station.name %></h1>


<p><%= link_to "Edit", edit_station_path(@station), :class => "btn btn-default" %></p>
<p><%= link_to "Delete", station_path(@station),
                        :confirm => "You sure?",
                        :method => "delete",
                        :class => "btn btn-danger" %></p>
<p><a href="/stations">Return to station listing</a></p>
