<%= content_for(:title, "View | Bus Stations") %>
<h1><%= @stop.station_id %></h1>
<h2><%= @stop.line_id %></h2>


<p><%= link_to "Edit", edit_stop_path(@stop), :class => "btn btn-default" %></p>
<p><%= link_to "Delete", stop_path(@stop),
                        :confirm => "You sure?",
                        :method => "delete",
                        :class => "btn btn-danger" %></p>
<p><a href="/stops">Return to stop listing</a></p>
